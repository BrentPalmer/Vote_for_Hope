.container
  .row
    .col-xs-12
      %h1
        Create Chairty
      = form_for @charity do |f|
        .form-group
          = f.label :name
          = f.text_field :name, class: "form-control"
        .form-group
          = f.label :description
          = f.text_area :description, class: "form-control"
        .form-group
          = f.label :mission_statement
          = f.text_area :mission_statement, class: "form-control"
        .form-group
          = f.label :avatar
          = f.text_field :avatar, class: "form-control"
        .form-group
          = f.label :url
          = f.text_field :url, class: "form-control"
        .form-group
          = f.submit "Create", class: "btn btn-primary"